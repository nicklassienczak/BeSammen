<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="50dp"
    android:padding="2dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="Senderens navn"
        android:id="@+id/senderNameOnMessage">

    </TextView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/senderNameOnMessage"
        android:background="@drawable/sender_chat_design"
        android:id="@+id/senderMessageLayout">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="7dp"
            android:paddingRight="40dp"
            android:text="Afsenderens besked bliver vist i den her boks "
            android:textSize="18sp"
            android:textColor="@color/white"
            android:paddingBottom="7dp"
            android:paddingTop="7dp"
            android:id="@+id/senderMessage">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/timeMessageSent"
            android:textSize="10sp"
            android:layout_toRightOf="@id/senderMessage"
            android:layout_marginLeft="-40dp"
            android:layout_alignBottom="@id/senderMessage"
            android:text="12:22"
            android:textColor="@color/white"
            android:padding="7dp">

        </TextView>
        
        
        
    </RelativeLayout>

</RelativeLayout>